@model IEnumerable<School.Models.Subject>

@{
    ViewData["Title"] = "Kreu i Lendes";
    var curriculums = ViewBag.Curriculums as List<Curriculum>;
}

<h1>Lendet</h1>

<p>
    <a asp-action="Create">Krijo te Ri</a>
</p>

<form asp-controller="Subject">
    <label>Kerko</label>
    <input type="text" name="filter" />

    <label>Kurrikulat</label>
    <select class="form-control" id="curriculums" name="kurrikulaId">
        <option value="">Zgjidh nje Kurrikule</option>
        @foreach (var item in curriculums)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <button type="submit" asp-action="Index">Kerko Tani</button>
</form>
    
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Author
            </th>
            <th>
                Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Author
                </td>
                <td>
                    @item.Type
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>